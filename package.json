{
  "name": "@enricoemiro/mailer",
  "version": "1.0.1",
  "description": "A simple NestJS mailer module based on NodeMailer.",
  "license": "MIT",
  "private": false,
  "author": "Enrico Emiro",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "nest",
    "nodemailer",
    "mailer",
    "nodejs"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf ./dist && tsc -p ./tsconfig.build.json",
    "format": "prettier --write --no-error-on-unmatched-pattern \"lib/**/*.ts\"",
    "lint": "eslint \"lib/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "nodemailer": "^6.7.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@nestjs/common": "^8.4.4",
    "@nestjs/core": "^8.4.4",
    "@nestjs/testing": "^8.4.4",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/jest": "27.5.0",
    "@types/node": "^17.0.31",
    "@types/nodemailer": "^6.4.4",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "ts-jest": "^28.0.1",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enricoemiro/mailer.git"
  },
  "bugs": {
    "url": "https://github.com/enricoemiro/mailer/issues"
  },
  "homepage": "https://github.com/enricoemiro/mailer#readme"
}
